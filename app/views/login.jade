extends layout

block variables
	- var title = 'Log In';
	-	var	subheading = 'Please, log in using the way that suits you best.';

block header
	+header(title, subheading, null, '/img/login-bg.jpg')

block content
	.row.m-bottom-2x
		.col-xs-12.col-md-6.m-bottom
			a.btn.btn-social.w-100.bg-facebook(href='/auth/facebook')
				i.fa.fa-facebook.fa-lg.m-right
				| Log in with Facebook			
		.col-xs-12.col-md-6.m-bottom
			a.btn.btn-social.w-100.bg-google(href='/auth/google')
				i.fa.fa-google-plus.fa-lg.m-right
				| Log in with Google
	if errorMessage
		.row
			.col-xs-12
				.alert.alert-danger.alert-dismissible.fade.in(role='alert')
					button.close(type='button', data-dismiss='alert', aria-label='Close')
						span(aria-hidden='true') Ã—
					| #{errorMessage}
	form#loginForm(name='loginForm', method='POST', novalidate='')
		.row.control-group
			.form-group.col-xs-12.floating-label-form-group.controls
				label Email
				input.form-control(type='email', name='email', placeholder='Email', required='')
				span.help-block
		.row.control-group
			.form-group.col-xs-12.floating-label-form-group.controls
				label Password
				input.form-control(type='password', name='password', placeholder='Password', required='')
				span.help-block
		input(type='hidden', name='_csrf', value=csrf)
		input.d-none(type='submit')
